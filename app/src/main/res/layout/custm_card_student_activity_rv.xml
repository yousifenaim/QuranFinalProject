<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="#0288D1"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/custm_card_student_activity_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="5dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/custm_card_student_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text=""
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/custm_card_student_activity_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/custm_card_student_activity_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16sp"
            android:text=""
            android:layout_margin="5dp"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/custm_card_student_activity_image"
            app:layout_constraintTop_toBottomOf="@+id/custm_card_student_activity_name" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/custm_card_student_activity_image"
            app:layout_constraintTop_toBottomOf="@+id/custm_card_student_activity_number">

            <TextView
                android:id="@+id/custm_card_student_activity_branch"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="12sp">

            </TextView>

            <TextView
                android:id="@+id/custm_card_student_activity_circle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/custm_card_student_activity_center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/custm_card_student_activity_image">

            <TextView
                android:id="@+id/custm_card_student_activity_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF"
                android:text="@string/Tasks" />

            <TextView
                android:id="@+id/custm_card_student_activity_student_assessment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF"
                android:text="@string/Student_Assessment" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>