<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/purple_500"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/custm_card_mahfaz_activity_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="5dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/custm_card_mahfaz_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text=""
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/custm_card_mahfaz_activity_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/custm_card_mahfaz_activity_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16sp"
            android:text=""
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/custm_card_mahfaz_activity_image"
            app:layout_constraintTop_toBottomOf="@+id/custm_card_mahfaz_activity_name" />

        <TextView
            android:id="@+id/custm_card_mahfaz_activity_branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16sp"
            android:text=""
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/custm_card_mahfaz_activity_image"
            app:layout_constraintTop_toBottomOf="@+id/custm_card_mahfaz_activity_number" />

        <TextView
            android:id="@+id/custm_card_mahfaz_activity_circles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="3dp"
            android:textSize="18sp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@+id/custm_card_mahfaz_activity_branch"
            android:text="@string/ListCircle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>