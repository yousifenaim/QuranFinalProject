<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/purple_500"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/custm_card_memorization_circle_image"
            android:layout_width="120dp"
            android:layout_height="105dp"
            android:scaleType="centerCrop"
            android:layout_margin="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/custm_card_memorization_circle_tv_centerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:textStyle="bold"

            app:layout_constraintEnd_toStartOf="@+id/custm_card_memorization_circle_tv_branch"
            android:textColor="@color/white"
            android:text=""
            app:layout_constraintBottom_toBottomOf="@+id/custm_card_memorization_circle_image"
            app:layout_constraintStart_toEndOf="@+id/custm_card_memorization_circle_image" />


        <TextView
            android:id="@+id/custm_card_memorization_circle_tv_branch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text=""
            android:textStyle="bold"

            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/custm_card_memorization_circle_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/custm_card_memorization_circle_tv_centerName" />

        <TextView
            android:id="@+id/custm_card_memorization_circle_tv_moshrafName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textStyle="bold"

            android:textColor="@color/white"
            android:layout_margin="5dp"
            app:layout_constraintBottom_toTopOf="@+id/custm_card_memorization_centers_tv_branch"
            app:layout_constraintStart_toEndOf="@+id/custm_card_memorization_circle_image"
            app:layout_constraintTop_toBottomOf="@+id/custm_card_memorization_circle_tv_name" />

        <TextView
            android:id="@+id/custm_card_memorization_circle_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/custm_card_memorization_circle_image"
            app:layout_constraintTop_toTopOf="@+id/custm_card_memorization_circle_image" />

        <ImageView
            android:id="@+id/custm_card_memorization_circle_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_locationwhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/custm_card_memorization_circle_tv_centerName">

            <TextView
                android:id="@+id/custm_card_memorization_circle_tv_studentList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"

                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:text="@string/List_of_student" />

            <TextView
                android:id="@+id/custm_card_memorization_circle_tv_mahfazList1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"

                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:text="@string/List_of_Mahfaz" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>